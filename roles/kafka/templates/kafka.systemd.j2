[Unit]
Description=Kafka
Before=
After=network.target

[Service]
User=kafka
Environment=JAVA_HOME=/usr/local/java CHDIR={{ kafka.configuration.data_dir }} LOG_DIR={{ kafka.configuration.data_dir }}/loggers
ExecStart={{ kafka_application_path }}/bin/kafka-server-start.sh {{ kafka_application_path }}/config/real-server.properties
Restart=on-abort

[Install]
WantedBy=multi-user.target
