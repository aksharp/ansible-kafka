[Unit]
Description=Zookeeper
Before=
After=network.target

[Service]
Type=forking
User=zookeeper
Environment=ZOO_LOG_DIR={{ zookeeper.configuration.data_dir }}/log JAVA_HOME={{ java.installation_path }}/bin/java CHDIR={{ zookeeper.configuration.data_dir }}
ExecStart={{ zk_application_path }}/bin/zkServer.sh start
Restart=on-abort

[Install]
WantedBy=multi-user.target
